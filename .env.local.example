# Exemplo de configurações locais (copie para .env.local e ajuste valores)

# Flask / App
FLASK_ENV=development
FLASK_DEBUG=true
LOG_LEVEL=INFO

# Porta opcional (se aplicável ao seu runner)
PORT=8000

# CORS para front local (ajuste conforme porta)
CORS_ORIGINS=http://127.0.0.1:3000,http://localhost:3000,http://127.0.0.1:5173,http://localhost:5173

# MySQL (local)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=seu_usuario
MYSQL_PASSWORD=sua_senha
MYSQL_DATABASE=aspma

# MongoDB (opcional)
# MONGO_URI=mongodb://localhost:27017
# MONGO_DATABASE=consigexpress

# Email (MailHog para dev)
# MAIL_SERVER=localhost
# MAIL_PORT=1025
# MAIL_USE_TLS=false
# MAIL_USE_SSL=false
# MAIL_DEFAULT_SENDER=no-reply@localhost
# MAIL_STRICT_MODE=false

# Flags de desenvolvimento
ENABLE_FAKE_LOGIN=true
DISABLE_RATE_LIMIT=true
DEV_ESQUECEU_CODE_FALLBACK=true
ALLOW_DEV_ESQUECEU_ANY=true

# Segredos (use chaves diferentes em produção)
SECRET_KEY=troque-esta-chave-dev
JWT_SECRET_KEY=troque-esta-chave-jwt-dev
