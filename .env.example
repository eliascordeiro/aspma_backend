############################################
# Exemplo de .env para o backend (ASPMA)
# Copie este arquivo para .env e ajuste os valores.
############################################

# Ambiente
FLASK_ENV=development
FLASK_DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=defina-uma-chave-secreta

# JWT (respeita HOURS e DAYS conforme Settings)
JWT_SECRET_KEY=defina-uma-chave-jwt
JWT_ACCESS_TOKEN_HOURS=24
JWT_REFRESH_TOKEN_DAYS=30

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=seu_usuario
MYSQL_PASSWORD=sua_senha
MYSQL_DATABASE=aspma
MYSQL_CHARSET=utf8mb4

# MongoDB (pode usar MONGO_URI ou MONGODB_URI)
MONGO_URI=mongodb://user:pass@host:27017/consigexpress
MONGO_DATABASE=consigexpress
# Alternativo (suportado):
# MONGODB_URI=mongodb://user:pass@host:27017/consigexpress
# MONGODB_DATABASE=consigexpress

# CORS (separe por vírgula)
CORS_ORIGINS=http://127.0.0.1:3000,http://localhost:3000

# Segurança Convenios
ENABLE_FAKE_LOGIN=false
MAX_TENTATIVAS_CONVENIO=5

# Rate Limiting
RATELIMIT_DEFAULT=1000 per hour
# Para desativar limiter em dev, defina no ambiente (não é obrigatório no .env):
# DISABLE_RATE_LIMIT=true

# E-mail (Flask-Mail)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=true
MAIL_USE_SSL=false
# Remetente padrão (se não definido, usa MAIL_USERNAME)
MAIL_DEFAULT_SENDER=
# Se true, falha quando e-mail não está configurado (em vez de no-op)
MAIL_STRICT_MODE=false

# reCAPTCHA (opcional)
RECAPTCHA_SECRET_KEY=

# Dev only: fallback para esqueceu-senha se Mongo estiver indisponível
# DEV_ESQUECEU_CODE_FALLBACK=false

# Dev only: permitir enviar código de esqueceu mesmo quando o e-mail não está cadastrado.
# Útil para validar SMTP e UX sem dados reais. NUNCA usar em produção.
# ALLOW_DEV_ESQUECEU_ANY=false

############################################
# WhatsApp (WhatsGw) - Opcional
# Para ativar envio real, crie um .env.local com os valores abaixo e defina WHATSAPP_ENABLED=true
WHATSAPP_ENABLED=false
WHATS_GW_API_URL=https://app.whatsgw.com.br/api/WhatsGw/Send
WHATS_GW_APIKEY=
WHATS_GW_SENDER=
WHATS_DEFAULT_DDD=41
############################################

